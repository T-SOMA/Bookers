<h3>Books</h3>

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.text %></td>
			<td><%= book.body %></td>
			<td>
				<%= link_to "show", book_path(book.id) %>
				<%= link_to "edit", edit_book_path(book.id) %>
			</td>
		</tr>

	<% end %>
	</tbody>
</table>